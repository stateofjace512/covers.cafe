---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Edit Profile" description="Edit your covers.cafe profile">
  <h1 class="section-title">
    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="8" r="5"/><path d="M20 21a8 8 0 1 0-16 0"/><path d="m17 17 4 4"/><path d="m13.5 21 3.5-3.5"/></svg>
    Edit Profile
  </h1>

  <div class="card edit-card">
    <p class="text-muted" style="margin-bottom:18px;font-size:13px">Sign in to edit your profile.</p>
    <div class="form-row">
      <label class="form-label">Display Name</label>
      <input type="text" placeholder="Your display name" class="form-input" disabled />
    </div>
    <div class="form-row">
      <label class="form-label">Bio</label>
      <textarea rows="4" placeholder="Tell the community about yourselfâ€¦" class="form-input" disabled style="resize:vertical"></textarea>
    </div>
    <div class="form-row">
      <label class="form-label">Website</label>
      <input type="text" placeholder="https://yoursite.com" class="form-input" disabled />
    </div>
    <div class="form-actions">
      <button class="btn btn-primary" disabled>Save Changes</button>
      <a href="/profile" class="btn btn-secondary">Cancel</a>
    </div>
  </div>
</Layout>

<style>
  .edit-card { max-width: 520px; display: flex; flex-direction: column; gap: 16px; }

  .form-row { display: flex; flex-direction: column; gap: 5px; }

  .form-label {
    font-size: 13px;
    font-weight: bold;
    color: var(--body-text);
    text-shadow: 0 1px 0 rgba(255,255,255,0.4);
  }

  [data-theme="dark"] .form-label { text-shadow: none; }

  .form-input {
    width: 100%;
    padding: 8px 12px;
    border-radius: 4px;
    border: 1px solid var(--body-card-border);
    background: var(--body-card-bg);
    color: var(--body-text);
    font-size: 13px;
    box-shadow: var(--shadow-inset-sm);
    outline: none;
    font-family: Arial, Helvetica, sans-serif;
    transition: border-color 0.15s, box-shadow 0.15s;
  }

  .form-input:disabled {
    opacity: 0.55;
    cursor: not-allowed;
  }

  .form-actions {
    display: flex;
    gap: 10px;
    padding-top: 4px;
  }
</style>

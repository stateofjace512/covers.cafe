---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Favorites" description="Your favorite album covers">
  <h1 class="section-title">
    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>
    Favorites
  </h1>

  <div class="empty-state card">
    <svg xmlns="http://www.w3.org/2000/svg" width="52" height="52" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" style="opacity:0.3;margin-bottom:14px"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>
    <h2 class="empty-state-title">No favorites yet</h2>
    <p class="empty-state-body">
      Star album covers from the gallery to save them here. Sign in first to keep your favorites across devices.
    </p>
    <div class="empty-state-actions">
      <a href="/" class="btn btn-primary">Browse Gallery</a>
      <a href="/login" class="btn btn-secondary">Sign In</a>
    </div>
  </div>
</Layout>

<style>
  .empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 60px 40px;
    max-width: 440px;
  }

  .empty-state-title {
    font-size: 20px;
    font-weight: bold;
    color: var(--body-text);
    margin-bottom: 10px;
    text-shadow: 0 1px 0 rgba(255,255,255,0.4);
  }

  [data-theme="dark"] .empty-state-title { text-shadow: none; }

  .empty-state-body {
    font-size: 14px;
    color: var(--body-text-muted);
    line-height: 1.6;
    margin-bottom: 24px;
  }

  .empty-state-actions {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
    justify-content: center;
  }
</style>

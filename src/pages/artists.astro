---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Artists" description="Browse artists on covers.cafe">
  <h1 class="section-title">
    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="8" r="5"/><path d="M20 21a8 8 0 1 0-16 0"/></svg>
    Artists
  </h1>

  <div class="toolbar mb-4">
    <input type="search" placeholder="Search artistsâ€¦" class="toolbar-search" />
    <div class="toolbar-sort">
      <span class="toolbar-sort-label">Sort by:</span>
      <button class="toolbar-sort-btn toolbar-sort-btn--active">Name</button>
      <button class="toolbar-sort-btn">Popular</button>
      <button class="toolbar-sort-btn">Newest</button>
    </div>
  </div>

  <div class="artist-grid">
    {Array.from({ length: 18 }).map((_, i) => (
      <a href={`/artists/${i + 1}`} class="artist-card">
        <div class="artist-card-avatar">
          <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" style="opacity:0.35"><circle cx="12" cy="8" r="5"/><path d="M20 21a8 8 0 1 0-16 0"/></svg>
        </div>
        <div class="artist-card-info">
          <span class="artist-card-name">Artist {i + 1}</span>
          <span class="artist-card-count">{Math.floor(Math.random() * 50 + 2)} covers</span>
        </div>
      </a>
    ))}
  </div>
</Layout>

<style>
  /* Toolbar */
  .toolbar {
    display: flex;
    align-items: center;
    gap: 14px;
    flex-wrap: wrap;
  }

  .toolbar-search {
    padding: 7px 12px;
    border-radius: 4px;
    border: 1px solid var(--body-card-border);
    background: var(--body-card-bg);
    color: var(--body-text);
    font-size: 13px;
    box-shadow: var(--shadow-inset-sm);
    outline: none;
    width: 220px;
    transition: border-color 0.15s, box-shadow 0.15s;
  }

  .toolbar-search:focus {
    border-color: var(--accent);
    box-shadow: var(--shadow-inset-sm), 0 0 0 2px rgba(192,90,26,0.2);
  }

  .toolbar-sort {
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .toolbar-sort-label {
    font-size: 12px;
    color: var(--body-text-muted);
    font-weight: bold;
    margin-right: 4px;
  }

  .toolbar-sort-btn {
    padding: 5px 10px;
    border-radius: 4px;
    border: 1px solid var(--body-card-border);
    background: var(--body-card-bg);
    color: var(--body-text-muted);
    font-size: 12px;
    font-weight: bold;
    cursor: pointer;
    box-shadow: var(--shadow-sm);
    transition: background 0.12s, color 0.12s;
    font-family: Arial, Helvetica, sans-serif;
  }

  .toolbar-sort-btn:hover {
    background: var(--sidebar-bg);
    color: var(--sidebar-text);
  }

  .toolbar-sort-btn--active {
    background: linear-gradient(180deg, var(--accent-light) 0%, var(--accent) 100%);
    color: var(--accent-text);
    border-color: var(--accent-dark);
    text-shadow: 0 1px 1px rgba(0,0,0,0.3);
  }

  /* Artist grid */
  .artist-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    gap: 14px;
  }

  .artist-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
    padding: 22px 16px;
    background: var(--body-card-bg);
    border: 1px solid var(--body-card-border);
    border-radius: 6px;
    box-shadow: var(--shadow-md), inset 0 1px 0 rgba(255,255,255,0.4);
    text-decoration: none;
    color: var(--body-text);
    transition: box-shadow 0.15s, transform 0.15s;
    background-image: linear-gradient(180deg, rgba(255,255,255,0.2) 0%, rgba(255,255,255,0) 40%);
  }

  .artist-card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-2px);
    text-decoration: none;
    color: var(--body-text);
  }

  .artist-card-avatar {
    width: 64px;
    height: 64px;
    border-radius: 50%;
    background: linear-gradient(145deg, var(--sidebar-bg-light), var(--sidebar-bg-dark));
    border: 2px solid var(--body-card-border);
    box-shadow: var(--shadow-sm), inset 0 1px 0 rgba(255,255,255,0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--body-text-muted);
  }

  .artist-card-info {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2px;
  }

  .artist-card-name {
    font-size: 14px;
    font-weight: bold;
    color: var(--body-text);
    text-shadow: 0 1px 0 rgba(255,255,255,0.4);
  }

  [data-theme="dark"] .artist-card-name { text-shadow: none; }

  .artist-card-count {
    font-size: 11px;
    color: var(--body-text-muted);
  }
</style>
